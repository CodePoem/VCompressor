<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sample.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_compress"
            style="@style/item_button"
            android:text="Compress" />

        <TextView
            android:id="@+id/tv_bitmap_factory_option"
            style="@style/item_button"
            android:text="BitmapFactory.Option" />

        <TextView
            android:id="@+id/tv_bitmap_android_compress"
            style="@style/item_button"
            android:text="Bitmap Android Compress" />

    </LinearLayout>


</androidx.core.widget.NestedScrollView>